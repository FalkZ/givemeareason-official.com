// Elements

text = 'p, a, li, td, th, ol, ul'
headings = 'h1, h2, h3, h4, h5, h6'

//dark = darken(#011936, 30%)

.react-photo-gallery--gallery
  min-width 100% !important

#lightboxBackdrop
  font-family Anton


.Body
  grid(direction: 'column')
  overflow hidden
  background linear-gradient(35deg, darken(mix(#2050cc, #095859, 70%), 80%) 0%,black 100%) no-repeat;

.Sidebar
  padding 20px 20px*1.6
  cell(1, 3, 'center', 0)
  grid(direction: 'row')
  background dark
  height 100vh
  box-shadow shadowPrimary
  //display flex
  max-width 300px
  min-width 300px
  //overflow hidden

marginMain = 40px

.react-photo-gallery--gallery
  max-width 90vh !important
  display table
  margin 0 auto

.Header
  //
  //cell(1, 1, 'center', 0)
  font-size 40px
  //background black
  position fixed
  //opacity 0.9
  font-family Anton
  height 80px
  line-height 80px
  width 100vw
  z-index 2
  //border-bottom 5px solid black
  .Center
    box-shadow  0px 3px 7px 0px black
    opacity 1
    transform rotate(5deg)
    padding 0 20px
    background #095859
    color rgba(black, 0.8)
    margin 0 auto
    display table
    transition all 0.1s ease-out
    &:hover
      color rgba(black, 0.4)

  //text-shadow 1px 1px 5px black
  .Logo
    position fixed
    //margin-right -50px
    transform rotate(-25deg)
    height calc(100px + 10vw)
    margin-top -6px
    margin-bottom -14px
    float left
    //margin-right 20px


.Nav, .NavFooter
  cell(1, 1, 'stretch', 0)
  grid(direction: 'row')
  font-family Nunito
  padding-top 30px

.NavItem
  cursor pointer
  display table-row
  color white
  font-size 24px
  font-weight 600
  line-height 2em
  opacity 0.6
  cell(1, 1, 'top', 0)
  transition opacity 0.2s ease-out
  //&:hover
    //opacity 1

  .Icon
    width 1.6em
    text-align center

.NavFooter
  cell(1, 1, 'bottom', 0)

.Navigation
  cell(1, 1, 'center', 0)
  background #095859
  width 100vw
  opacity 0.7
  text-align center
  font-family Anton
  height 40px
  line-height 40px
  *
    color black
    text-decoration none
    padding 0 5px
    font-size 23px
    transition all 0.1s ease-out
    &:hover
      opacity 0.4

main
  padding-bottom 110px

.Intro
  min-height 100vh

.Main
  //border-top 5px solid #095859
  cell(2, 3, 'left', 0)
  width 100vw
  max-height calc(100vh - 40px)
  height auto
  overflow-y auto
  margin 0 auto
  padding  20px*1.6 20px
  //padding-top 110px
  //padding-bottom 110px !important
  position relative
  &.Preview
    all initial
    padding 20px !important
    max-width calc(100vw - 40px) !important


  &>*
    max-width 800px
    margin 0 auto

  .Pic
    display block
    background black
    height calc(100vh - 340px)

  .SocialMedia
    transition all 0.1s ease-out
    margin 0 auto
    display table
    a
      margin 10px
    .Icon
      font-size 50px
      color #095859
      &:hover
        opacity 0.4


  #Background
    position absolute
    top 0
    max-height 100%
    max-width 100%
    z-index -1
    opacity 0.1


