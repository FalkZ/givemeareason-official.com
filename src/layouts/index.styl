@import 'variables.styl'


g = #00b564
r = #f7a8c2
themePrimary =  #0c5baf
headerBackground = white
buttonBackground = themePrimary
buttonColor = white
linkColor = lighten(themePrimary, 20%)
buttonDepth = 1.5px
buttonDepthClick = buttonDepth / 2
buttonSpread = 1
buttonShadow = rgba(#050625 0.2)

